doctype html
html
  head
    title survey says
    script(type="text/javascript", src="/javascripts/jquery.min.js")
    script(type="text/javascript", src="/javascripts/authentication.js")
    script(type="text/javascript", src="/javascripts/create-survey.js")
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css", rel="stylesheet")
    script(type="text/javascript", src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")

    link(rel='stylesheet', href='/stylesheets/style.css')

  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type="button", data-toggle="collapse")
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href="#") Survey Says

        .collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li.signup-link(href="#", data-toggle="modal", data-target=".bs-signup-modal-lg")
            li.login-link
              a(href="#", data-toggle="modal", data-target=".bs-login-modal-lg") login
            li.me.dropdown
            a.dropdown-toggle(data-toggle="dropdown", role="button", aria-expanded="false")
              ul.dropdown-menu(role="menu")
                li.logout-link
                  a(href="#") log out
        .modal.fade.bs-signup-modal-lg(id="signup-modal", tabindex="-1", role="dialog", aria-labelledby="myLargeModalLabel", aria-hidden="true")
          .modal-dialog.modal-md
            .modal-content
              h1 create an account
              form
                .row
                  .col-md-12
                    .form-group
                      label(for="signup-email")
                      input.form-control(type="email", id="singup-email", placeholder="enter you email")
                    .form-group
                      label(for="signup-passport") Create a Password
                      input.form-control(type="password", id="signup-password", placeholder="password")
                    button.btn.btn-default(id="signup-submit", type="button")

        .modal.fade.bs-signup-modal-lg(id="login-modal", tabindex="-1", role="dialog", aria-labelledby="myLargeModalLabel", aria-hidden="true")
          .modal-dialog.modal-md
            .modal-content
              h1 login
              form(id="login-form")
                .form-group
                  label(for="login-email")
                  input.form-control(type="email", id="login-email", placeholder="email")
                .form-group
                  label(for="login-passport") Create a Password
                  input.form-control(type="password", id="login-password", placeholder="password")
                button.btn.btn-default(id="login-submit", type="button")
              div(id="login-alert")
    block content

